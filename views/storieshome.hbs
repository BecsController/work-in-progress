{{> header}}
<div class="columns is-two-thirds">
  <div class="column is-10 is-offset-1">
    <div class="box top-box">
      <h1 class="has-text-centered is-size-1 has-text-grey">
        Welcome to the Stories Page
      </h1>
    </div>
  </div>
</div>

<div class="columns is-two-thirds">
<div class="column is-offset-1 is-2 is-2-widescreen">
  <div class="menu box">
    <p class="menu-label">
      Filter by genre
    </p>
    <ul class="menu-list">
      <li>
        <a class="is-active" data-action="filter" data-group href="/stories">All</a>
      </li>
      <li>
        <a data-action="filter" data-group="school" href="/stories/school">School stories</a>
      </li>
      <li>
        <a data-action="filter" data-group href="/stories/outandabout">Out and About</a>
      </li>
      <li>
        <a data-action="filter" data-group href="/stories/behaviour">Behaviour</a>
      </li>
    </ul>
  </div>
</div>

<div class="column is-8">
    <div class="box">
    <div class="columns is-multiline" id="grid">
      {{#each stories}}
      <div class="column is-3 is-3-widescreen is-flex">
        <div class="card">
          <a href="/story/{{id}}">
          <div class="card-title title is-4">
            <h3 class="has-text-grey-dark">{{title}}</h3>
          </div>
        <div class="box card-image">
              <figure class="image is-1by1">
                <img src="{{image}}" alt="{{title}}">
              </figure>
          </div>
          <div class="card-body">
            <div class="box">
              <p>
                {{description}}
              </p>
            </div>
          </div>
          </a>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
  </div>
</div>
