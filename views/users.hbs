{{> header}}
<div class="columns is-two-thirds">
  <div class="column is-10 is-offset-1">
<div class="box top-box">
  <h1 class="has-text-centered is-size-1 has-text-grey">
    Choose your profile
  </h1>
</div>
</div>
</div>

<div class="column is-10 is-offset-1">
    <div class="box">
    <div class="columns is-multiline" id="grid">
      {{#each users}}
      <div class="column is-3 is-3-widescreen is-flex">
        <div class="card">
          <a href="/user/{{id}}">
          <div class="card-title title is-4">
            <h3 class="has-text-grey-dark">{{name}}</h3>
          </div>
        <div class="box card-image">
              <figure class="image is-1by1">
                <img src="{{avatar}}" alt="{{name}}">
              </figure>

          </div>
          </a>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>
